<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHomePageBackground"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/section_roll_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingBottom="@dimen/dp_4"
        app:rollviewpager_hint_gravity="right"
        app:rollviewpager_play_delay="6000"/>

    <include layout="@layout/view_section_head_content"/>

    <TextView
        android:id="@+id/section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHomePageBackground"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@drawable/ic_hot_red_24"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@color/colorPrimary"
        tools:text="主播真会玩">
    </TextView>
</LinearLayout>