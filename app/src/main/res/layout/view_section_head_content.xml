<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/section_head_btn_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorItemBackground"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/section_head_text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_real_play_42"
            android:gravity="center"
            android:text="主播真会玩"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/section_head_text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_10_red_42"
            android:gravity="center"
            android:text="起小点TOP10"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/section_head_text_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_pupil_black_42"
            android:gravity="center"
            android:text="青铜修炼手册"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_head_text_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_ow_orange_42"
            android:gravity="center"
            android:text="守望先锋TOP10"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/section_head_text_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_girl_green_42"
            android:gravity="center"
            android:text="长歌躺赢班"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/section_head_text_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/ic_other_purple_42"
            android:gravity="center"
            android:text="其他"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>